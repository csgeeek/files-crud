  <div class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 class="text-center display-4 my-4">File Uploads section</h1>
        <form action="/material/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3">
            <input type="file" name="file" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label">Choose File</label>
          </div>
          <input type="submit" value="Submit" class="btn btn-primary btn-block">
        </form>
        <hr> 
        <% if(files){ %>
          <% files.forEach(function(file) { %>
            <div class="card card-body mb-3">
                            <% if(file.isImage){ %>
                                <a href="/material/image/<%= file.filename%>"> <%= file.filename %> </a>
                            <% } else if(file.isVideo){ %>
                              <a href="/material/video/<%= file.filename%>"> <%= file.filename %> </a>
                            <% } else if(file.isPDF){ %>
                              <a href="/material/pdf/<%= file.filename%>"> <%= file.filename %> </a>
                            <% } else if(file.isWord) { %>
                              <a href="/material/word/<%= file.filename%>"> <%= file.filename %> </a>
                            <% } else if(file.isPPT) {%>
                              <a href="/material/ppt/<%= file.filename%>"> <%= file.filename %> </a>
                            <% } else {%>
                              <a href="/material/notfound"> <%= file.filename %> </a>
                              <% }%>

                      <form method="POST" action="/material/files/<%= file._id %>?_method=DELETE">
                        <button class="btn btn-danger btn-block mt-4">Delete</button>
                      </form>
            </div>
            <% }) %>
              <% } else { %>
                <p>No files to show</p>
                <% } %>
      </div>
    </div>
